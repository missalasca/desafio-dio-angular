# Editor configuration, see https://editorconfig.org
root = true
[*]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[dropdown-toggle.js]
trim_trailing_whitespace = false
insert_final_newline = false

[htmlparser.js]
insert_final_newline = false
max_line_length = true
max_line_length = 160

[*.ts]
quote_type = single
max_line_length = true
max_line_length = 160

[*.md]
max_line_length = off
trim_trailing_whitespace = false
